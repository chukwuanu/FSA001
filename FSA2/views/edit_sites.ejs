		 <table id="newTable" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Site ID</th>
                <th>IHS Site ID</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>State</th>
				<th>Delete</th>
				<th>Update</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Site ID</th>
                <th>IHS Site ID</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>State</th>
				<th>Delete</th>
				<th>Update</th>
            </tr>
        </tfoot>
        <tbody>
		<% sites.forEach( function ( site ){ %>
            <tr>
                <td><%= site.id %></td>
                <td><%= site.site_id %></td>
                <td><%= site.ihs_site_id %></td>
                <td><%= site.longitude %></td>
                <td><%= site.latitude %></td>
                <td><%= site.state %></td>
				<td><input type="button" onclick="location.href='/destroy_d/<%= site._id %>'" value="delete"</td>
				<td><input type="button" onclick="location.href='/edit_sites/<%= site._id %>'" value="update"</td>
            </tr>
		<% }); %>
			</tbody>
    </table>
 

