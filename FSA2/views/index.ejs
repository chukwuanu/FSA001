<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Makasa Sun</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
	<link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
	

    <style>
        body        { padding-top:20px; }
    </style>
</head>
<body>
<div class="container">
<h1 style="margin: 0px"><span class="fa fa-sign-in"></span> Login</h1>
<h1 style="text-align: center; margin: 0px;"><img src="/images/makasa_logo.png" /></h1>
<h1 style="text-align: center" ><span class=""></span> Field Service Application</h1>
<div class="col-sm-6 col-sm-offset-3">
	
    

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/" method="post">
        <div class="form-group">
            <label>User Name</label>
            <input type="text" class="form-control" name="user_name">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Login</button>
    </form>

    <hr>

    <h6>Need an account? Login as Admin</h6>
   <!-- <p>Or go <a href="/">home</a>.</p> -->

</div>

</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="/js/password.js"></script> 
<script>
    $(function() {
        $('#password').password().on('show.bs.password', function(e) {
            $('#eventLog').text('On show event');
            $('#methods').prop('checked', true);
        }).on('hide.bs.password', function(e) {
                    $('#eventLog').text('On hide event');
                    $('#methods').prop('checked', false);
                });
        $('#methods').click(function() {
            $('#password').password('toggle');
        });
    });
</script>
</body>
</html>